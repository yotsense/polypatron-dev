import React from "react";

type Props = {
  abierto: boolean;
  patron: string | null;
  dir: "V" | "R" | null;
  onCerrar: () => void;
};

export default function ComparePanel({ abierto, patron, dir, onCerrar }: Props) {
  if (!abierto) return null;

  const marketLabel = process.env.NEXT_PUBLIC_MARKET_LABEL || "";
  const marketSlug = process.env.NEXT_PUBLIC_MARKET_SLUG || "";

  return (
    <div
      onClick={onCerrar}
      style={{
        position: "fixed",
        inset: 0,
        background: "rgba(0,0,0,0.6)",
        display: "flex",
        alignItems: "center",
        justifyContent: "center",
        zIndex: 9999,
      }}
    >
      <div
        onClick={(e) => e.stopPropagation()}
        style={{
          background: "#111",
          padding: 24,
          borderRadius: 12,
          width: "900px",
          maxHeight: "80vh",
          overflow: "auto",
          border: "1px solid rgba(255,255,255,0.1)",
        }}
      >
        <h2>Comparar patrón</h2>
        <p><strong>Mercado:</strong> {marketLabel} {marketSlug ? `(${marketSlug})` : ""}</p>
        <p><strong>Patrón:</strong> {patron || "-"}</p>
        <p><strong>Dirección:</strong> {dir || "-"}</p>

        <button onClick={onCerrar} style={{ marginTop: 20 }}>
          Cerrar
        </button>
      </div>
    </div>
  );
}
